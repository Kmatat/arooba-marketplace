# ============================================================
# Arooba Marketplace - Environment Variables
# ============================================================
# Copy this file to .env and fill in the values before running
# docker compose up.
#
# IMPORTANT: Never commit .env to source control.
# ============================================================

# ── Database ─────────────────────────────────────────────────
DB_NAME=AroobaMarketplace
DB_USER=sa
DB_PASSWORD=          # Required: SQL Server SA password (min 8 chars, must include upper, lower, digit, symbol)
DB_TRUST_SERVER_CERTIFICATE=True

# ── JWT Authentication ───────────────────────────────────────
JWT_SECRET=           # Required: Minimum 32-character secret key for signing JWT tokens
JWT_ISSUER=Arooba.API
JWT_AUDIENCE=Arooba.Client
JWT_EXPIRATION_MINUTES=60

# ── ASP.NET Core ─────────────────────────────────────────────
ASPNETCORE_ENVIRONMENT=Development

# ── Pricing ──────────────────────────────────────────────────
PRICING_VAT_RATE=0.14
PRICING_MVP_FLAT_RATE=0.20
PRICING_MINIMUM_FIXED_UPLIFT=15
PRICING_COOPERATIVE_FEE=0.05
PRICING_LOGISTICS_SURCHARGE=10

# ── Escrow ───────────────────────────────────────────────────
ESCROW_HOLD_DAYS=14
ESCROW_MINIMUM_PAYOUT_THRESHOLD=500
